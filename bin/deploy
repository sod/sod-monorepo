#!/bin/bash

cd "$(dirname $0)/.."

if [[ ! -f "package.json" ]] || [[ ! -d ".git" ]] || [[ "$(basename `pwd`)" != "sod-satisfactory" ]]; then
    echo Not in the root directory. Exit.
    exit 1
fi

rm -rf production
yarn run build
cp -R dist/sod-satisfactory production
git add production
git commit -m "new release"